<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlyt_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_2"
            >

            <TextView
                android:id="@+id/tv_quality_color"
                android:layout_width="@dimen/dimen_8"
                android:layout_height="@dimen/dimen_8"
                android:layout_centerVertical="true"
                tools:background="@drawable/circle_green"
                />

            <TextView
                android:id="@+id/tv_live_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_2"
                tools:text="当前质量"/>

        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_sound_level"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_5"
        android:max="100"
        android:progressTint="@color/bg_yellow"
        android:progressBackgroundTint="@color/bg_black"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>